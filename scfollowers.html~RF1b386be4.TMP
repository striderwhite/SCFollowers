<!DOCTYPE html>
<html>
<head>
    <title>SC Followers!</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="Scripts/lodash.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.5/angular.js"></script>
    <link href="StyleSheet.css" rel="stylesheet" />
    <script src="Scripts/Followers/module.js"></script>
    <script src="Scripts/Followers/APICaller.js"></script>
</head>
<body ng-app="followersApp" ng-controller="followersController">
    <div class="jumbotron text-center">
        <h1>-> [ Soundcloud Followers Util ] <-</h1>
    </div>
    <div class="container">
        <div class="col-md-12 text-center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h2>Enter URL</h2>
                    </div>
                </div>
                <br />
                <input type="text" ng-model="SCEndpoint" placeholder="SC profile URL..." size="50" class="nice-text-box" /><br /><br />
                <input type="button" class="nice-button" value="Get Followers" width="250" ng-click="start()" />
                <br /><br />
            </div>
        </div>
        <div class="col-md-4"></div>

        <div class="col-md-12 text-center">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-success">
                        <h3>Followers # {{followerCount}}</h3>
                    </div>
                </div>   
                <br />
                Order By:
                <select ng-model="sortColumn">
                    <option value="id">ID #</option>
                    <option value="username">User Name</option>
                    <option value="city">City</option>
                    <option value="full_name">Full Name</option>
                    <option selected value="followers_count">Followers</option>
                </select> <br /><br />
                <table class="table table-hover table-condensed text-center ">
                    <tr>
                        <th>Avatar</th>
                        <th ng-click="sortData(id)">ID</th>
                        <th ng-click="sortData(username)">User Name</th>
                        <th ng-click="sortData(city)">City</th>
                        <th ng-click="sortData(full_name)">Name</th>
                        <th>Perma</th>
                        <th ng-click="sortData(followers_count)">Followers</th>
                    </tr>
                    <tr ng-repeat="user in followers | orderBy : sortColumn : reverseSort">
                        <td><img src={{user.avatar_url}} /></td>
                        <td>{{user.id}}</td>
                        <td>{{user.username}}</td>
                        <td>{{user.city}}</td>
                        <td>{{user.full_name}}</td>
                        <td><a href="{{user.permalink_url}}"> link </a> </td>
                        <td>{{user.followers_count}}</td>
                    </tr>
                </table>

            </div>

        </div>
       
        <ul class="pagination pagination-lg">
            <li><a href="#">&laquo;</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">&raquo;</a></li>
        </ul>
        <ul class="pager">
            <li class="previous"> <span>&larr; Previous </span></li>
            <li class="next"> <span>Next &rarr; </span></li>
        </ul>

    </div>
</body>
</html>
